<%- include('partials/header', {title: title} ) %>
<main class="container">
    <%- include('partials/errors') %>
    <form action="/sign-up" method="POST">
        <label for="forename"> Forename: </label>
        <input type="text" name="forename" id="forename" value="<%= user.forename ? user.forename : '' %>">
        <label for="surname"> Surname </label>
        <input type="text" name="surname" id="surname" value="<%= user.surname ? user.surname : '' %>">
        <label for="email"> E-Mail-Address </label>
        <input type="email" name="email" id="email" value="<%= user.email ? user.email : '' %>">
        <label for="password"> New Password </label>
        <input type="password" name="password" id="password">
        <label for="pass-confirm"> Confirm Password </label>
        <input type="password" name="pass-confirm" id="pass-confirm">
        <input type="submit" value="Sign-Up">
    </form>
    <span class="log-in-link">Already a member? <a href="/login">Log in</a></span>
</main>
<%- include('partials/footer') %>